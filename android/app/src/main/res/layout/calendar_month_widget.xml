<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgcolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/widget_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="14dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/no_login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please login"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:typeface="normal" />

        <LinearLayout
            android:id="@+id/calendar_grid_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/month_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp">
                <TextView
                    android:id="@+id/month_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="normal" />
                <TextView
                    android:id="@+id/year_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:typeface="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekday_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/weekday_sun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="normal" />
                <TextView
                    android:id="@+id/weekday_mon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="normal" />
                <TextView
                    android:id="@+id/weekday_tue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="normal" />
                <TextView
                    android:id="@+id/weekday_wed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="normal" />
                <TextView
                    android:id="@+id/weekday_thu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="normal" />
                <TextView
                    android:id="@+id/weekday_fri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="normal" />
                <TextView
                    android:id="@+id/weekday_sat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="normal" />
            </LinearLayout>

            <GridView
                android:id="@+id/calendar_grid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:numColumns="7"
                android:stretchMode="columnWidth"
                android:gravity="fill"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="0dp"
                android:columnWidth="0dp"
                android:listSelector="@android:color/transparent"
                android:adjustViewBounds="false"
                android:clipChildren="true"
                android:clipToPadding="true" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

