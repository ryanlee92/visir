<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bgcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/widget_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="14dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">

            <TextView
                android:id="@+id/no_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please login"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:typeface="normal" />

            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Event Title with Color Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/color_bar"
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/event_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:fontFamily="@font/suite_medium"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:typeface="normal" />
                </LinearLayout>

                <!-- Date, Duration, Type -->
                <TextView
                    android:id="@+id/event_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/suite_medium"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:typeface="normal" />

                <!-- Previous Context -->
                <LinearLayout
                    android:id="@+id/previous_context_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:background="@drawable/previous_context_background"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/previous_context_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_brain" />

                        <TextView
                            android:id="@+id/previous_context_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Previous Context"
                            android:textSize="14sp"
                            android:fontFamily="@font/suite_medium"
                            android:typeface="normal" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/previous_context_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/suite_medium"
                        android:lineSpacingMultiplier="1.2"
                        android:maxLines="5"
                        android:ellipsize="end"
                        android:typeface="normal" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
</FrameLayout>

